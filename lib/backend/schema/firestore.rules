rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{document} {
      allow create: if request.auth.uid == document;
      allow read: if true;
      allow write: if request.auth.uid == document;
      allow delete: if false;
    }

    match /appointments/{document} {
      allow create: if request.auth.uid == request.resource.data.appointmentName;
      allow read: if request.auth.uid == resource.data.appointmentDescription;
      allow write: if resource.data.appointmentPerson == /databases/$(database)/documents/users/$(request.auth.uid);
      allow delete: if request.auth.uid == resource.data.appointmentType;
    }
  }
}
